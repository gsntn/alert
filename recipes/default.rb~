package "build-essential" do
  action :install
end

package "libssl-dev" do
  action :install
end

package "git" do
  action :install
end

template "mailsend.install" do
  path "#{node['alert']['dir']}/alert.conf"
  source "mailsend.install.erb"
  owner "root"
  group "root"
  mode "0644"
end

bash "error_alert" do
  user "root"
  cwd "#{node['alert']['dir']}"
  code <<-EOH
  git clone https://github.com/gsntn/logsearch
  cp ./logsearch/logsearch.sh ./
  ./logsearch.sh "#{node['alert']['dir']}/#{node['alert']['file']}"
  EOH
end
